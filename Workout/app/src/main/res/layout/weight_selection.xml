<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".data_entry.WeightSelection">

    <!--Might remove this and try a number pad input-->


    <android.support.design.widget.TextInputLayout
        android:id="@+id/repInput"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignTop="@+id/setInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/_0" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/setInput"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/setsTextView"
        android:layout_alignTop="@+id/setsTextView"
        android:layout_below="@+id/setsTextView"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/_0" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/weightInput"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:layout_alignStart="@+id/weightTextView"
        android:layout_alignTop="@+id/repInput"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/_0" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/workoutTextView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="@string/workout"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/setsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="185dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/sets" />


    <TextView
        android:id="@+id/repTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/setsTextView"
        android:layout_below="@+id/workoutTextView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/repetitions" />

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/submitButton"
        android:layout_alignTop="@+id/setsTextView"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/weight" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/submitButton"
        android:text="@string/submit_button"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
        android:textColor="@color/textPrimary"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/pickDate"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/repInput"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:layout_marginTop="62dp"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center"
        android:hint="@string/today"
        android:inputType="none" />

</RelativeLayout
   >