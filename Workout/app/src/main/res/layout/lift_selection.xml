<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liftSelection"
    tools:context="com.lostntkdgmail.workout.data_entry.LiftSelection">

    <TextView
        android:id="@+id/selectLiftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/select_lift"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:id="@+id/liftList"
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:layout_below="@+id/selectLiftText"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="25sp">

    </ListView>

    <Button
        android:id="@+id/newLiftButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deleteLiftButton"
        android:layout_alignParentStart="true"
        android:text="Add Workout" />

    <Button
        android:id="@+id/deleteLiftButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Remove Workout" />

</RelativeLayout>