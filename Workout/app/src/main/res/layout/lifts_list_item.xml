<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    tools:context=".main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/liftListEntry"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        android:textAlignment="center"
        />

    <ImageButton
        android:id="@+id/liftEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/liftDeleteButton"
        android:layout_marginEnd="20dp"
        android:onClick="onEditLiftClick"
        android:background="@android:drawable/ic_menu_edit"
        android:contentDescription="edit lift"/>

    <ImageButton
        android:id="@+id/liftDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:onClick="onDeleteLiftClick"
        android:background="@android:drawable/ic_menu_delete"
        android:contentDescription="delete lift"/>

</RelativeLayout>